<?xml version="1.0" ?>
<robot 
   xmlns:xacro="http://www.ros.org/wiki/xacro">

	<xacro:include filename="$(find demo_navi)/src/urdf/xacro/roller.urdf.xacro"/>

	<xacro:macro
		name="rim_macro"
		params="name color xyz rpy"
	>

		<link name="rim_${name}_link">

			<inertial>

				<origin xyz="0 0 0"/>
				<mass value="1"/>
				<inertia
					ixx="0.000007"
					ixy="0"
					ixz="0"
					iyy="0.000007"
					iyz="0"
					izz="0.000008"
				/>
			</inertial>
			<visual>

				<geometry>

					<mesh filename="package://demo_navi/src/meshes/rim.stl"/>

				</geometry>
				<material name="rim_${name}_material">

					<color rgba="${color} 1"/>

				</material>

			</visual>
			<collision>

				<geometry>

					<mesh filename="package://demo_navi/src/meshes/rim.stl"/>

				</geometry>
			</collision>

		</link>
		<joint
			name="rim_${name}_joint"
			type="continuous"
		>

			<parent link="base_link" />
			<child link="rim_${name}_link" />
			<axis xyz="1 0 0"/>
			<origin
				xyz="${xyz}"
				rpy="${rpy}"
			/>
			<limit effort="100000" velocity="100000"/>
			<joint_properties friction="1.0"/>

		</joint>
		<xacro:roller_macro
			parent="${name}"
			name="s"
			xyz="0.0153 0 -0.0266"
			rpy="0 0 0"
		/>
		<xacro:roller_macro
			parent="${name}"
			name="nw"
			xyz="0.015 -0.0231 0.0131"
			rpy="1.0472 0 0"
		/>
		<xacro:roller_macro
			parent="${name}"
			name="ne"
			xyz="0.015 0.0231 0.0135"
			rpy="-1.0472 0 0"
		/>
		<xacro:roller_macro
			parent="${name}"
			name="sw"
			xyz="-0.0146 0.023 -0.0133"
			rpy="1.0472 0 0"
		/>
		<xacro:roller_macro
			parent="${name}"
			name="n"
			xyz="-0.0146 0 0.0268"
			rpy="0 0 0"
		/>
		<xacro:roller_macro
			parent="${name}"
			name="se"
			xyz="-0.0146 -0.023 -0.0133"
			rpy="-1.0472 0 0"
		/>
		<transmission name="rim_${name}_transmission">

			<type>transmission_interface/SimpleTransmission</type>
			<joint name="rim_${name}_joint">

				<hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>

			</joint>
			<actuator name="rim_${name}_motor">

				<hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
				<mechanicalReduction>1</mechanicalReduction>

			</actuator>

		</transmission>

		<gazebo reference = "rim_${name}_link">
  				<mu1>50.0</mu1>
  				<mu2>25.0</mu2>
  				<selfCollide>False</selfCollide>
      			<!--kp  value="10000000.0" />
      			<kd  value="10000000.0" />
      			<dampingFactor>10</dampingFactor>
				<minDepth>0.001</minDepth-->
		</gazebo>


	</xacro:macro>

</robot>
